};



// --- MAIN SCRIPT ---

document.addEventListener('DOMContentLoaded', function() {

    let currentLang = 'fr';

    let roiChart;



    async function callGemini(promptText) {

        const apiKey = ""; 

        const apiUrl = `https://generativelanguage.googleapis.com/v1beta/models/gemini-2.0-flash:generateContent?key=${apiKey}`;

        

        const payload = {

            contents: [{

                role: "user",

                parts: [{ text: promptText }]

            }]

        };



        try {

            const response = await fetch(apiUrl, {

                method: 'POST',

                headers: { 'Content-Type': 'application/json' },

                body: JSON.stringify(payload)

            });

            if (!response.ok) {

                throw new Error(`API Error: ${response.status}`);

            }

            const data = await response.json();

            if (data.candidates && data.candidates.length > 0 && data.candidates[0].content.parts.length > 0) {

                return data.candidates[0].content.parts[0].text;

            } else {

                // This case handles situations where the response is valid but empty, e.g., due to safety settings.

                console.warn("Gemini API returned a response with no content.", data);

                return null;

            }

        } catch (error) {

            console.error("Error calling Gemini API:", error);

            return null; // Return null to indicate failure

        }

    }



    function switchLanguage(lang) {

        currentLang = lang;

        document.documentElement.lang = lang;



        document.querySelectorAll('[data-i18n-key]').forEach(el => {

            const key = el.dataset.i18nKey;

            const translation = translations[lang]?.[key];

            if (translation) {

                el.innerHTML = translation;

            }

        });

        document.querySelectorAll('[data-i18n-placeholder]').forEach(el => {

             const key = el.dataset.i18nPlaceholder;

             const translation = translations[lang]?.[key]

             if(translation){

                el.placeholder = translation;

             }

        });



        document.querySelectorAll('.lang-btn').forEach(btn => btn.classList.toggle('active', btn.dataset.lang === lang));

        

        renderAccordion();

        renderPilotSteps();

        renderDepartmentSelector();

        clearDepartmentContent();

        calculateROI();

    }



    function renderAccordion() {

        const accordionContainer = document.getElementById('accordion-container');

        accordionContainer.innerHTML = '';

        const data = translations[currentLang]?.accordionData || translations.fr.accordionData;

        data.forEach((item) => {

            accordionContainer.innerHTML += `

                <div class="border border-gray-200 rounded-lg">

                    <button class="accordion-header w-full text-left p-4 flex justify-between items-center">

                        <h4 class="font-semibold">${item.title}</h4>

                        <svg class="icon-arrow w-5 h-5" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" /></svg>

                    </button>

                    <div class="accordion-content px-4"><p class="py-4 text-gray-600 border-t">${item.content}</p></div>

                </div>`;

        });

    }



    function renderPilotSteps() {

        const pilotStepsContainer = document.getElementById('pilot-steps');

        pilotStepsContainer.innerHTML = '';

        const data = translations[currentLang]?.pilotSteps || translations.fr.pilotSteps;

        data.forEach((step, index) => {

            pilotStepsContainer.innerHTML += `

                <li class="mb-10 ml-6">            

                    <span class="absolute flex items-center justify-center w-6 h-6 bg-[#E0E7FF] rounded-full -left-3 ring-8 ring-white">

                        <span class="font-bold text-sm text-[#3D405B]">${index + 1}</span>

                    </span>

                    <h4 class="font-semibold">${step.title}</h4>

                    <p class="text-sm text-gray-600">${step.desc}</p>

                </li>`;

        });

    }



    function renderDepartmentSelector() {

        const departmentSelector = document.getElementById('department-selector');

        departmentSelector.innerHTML = '';

        const depts = translations[currentLang]?.departments || translations.fr.departments;

        for (const key in depts) {

            const button = document.createElement('button');

            button.className = 'department-btn px-4 py-2 text-sm font-semibold rounded-full transition-all duration-300 ease-in-out';

            button.textContent = depts[key].displayName;

            button.dataset.deptKey = key;

            departmentSelector.appendChild(button);

        }

    }



    function clearDepartmentContent() {

         const departmentContent = document.getElementById('department-content');

         departmentContent.innerHTML = `<div class="text-center p-8 bg-white rounded-lg shadow-md">

            <p class="text-gray-500" data-i18n-key="departmentDefault">${translations[currentLang].departmentDefault}</p>

        </div>`;

    }



    function renderDepartment(deptKey) {

        const departmentContent = document.getElementById('department-content');

        const data = translations[currentLang]?.departments[deptKey];

        if (!data) return;



        let contentHtml = `

            <div class="mb-8 text-center">

                <p class="max-w-3xl mx-auto text-gray-600">${data.introduction}</p>

            </div>

            <div class="text-center mb-12">

                 <button class="btn-gemini generate-ideas-btn font-bold py-3 px-6 rounded-full" data-dept-key="${deptKey}">

                    <span data-i18n-key="generateIdeasButton">${translations[currentLang].generateIdeasButton}</span>

                </button>

            </div>

            <div id="gemini-ideas-container" class="mb-12"></div>

            <div class="grid md:grid-cols-2 gap-8">

                <div>

                    <h3 class="text-2xl font-bold mb-4">${translations[currentLang].promptsLibrary}</h3>

                    <div class="space-y-4">

                        ${data.prompts.map((prompt) => `

                            <div class="card p-0 overflow-hidden">

                                <button class="prompt-card-header w-full text-left p-4 flex justify-between items-center">

                                    <h4 class="font-semibold">${prompt.title}</h4>

                                    <svg class="icon-arrow w-5 h-5" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" /></svg>

                                </button>

                                <div class="prompt-card-content px-4 pb-4">

                                    <div class="border-t pt-4">

                                        <h5 class="font-semibold text-sm text-gray-500 mb-2">${translations[currentLang].blueprint}</h5>

                                        <pre class="bg-gray-100 p-3 rounded-md text-sm whitespace-pre-wrap font-sans">${prompt.blueprint}</pre>

                                        <h5 class="font-semibold text-sm text-gray-500 mt-4 mb-2">${translations[currentLang].example}</h5>

                                        <pre class="bg-gray-100 p-3 rounded-md text-sm whitespace-pre-wrap font-sans">${prompt.example}</pre>

                                    </div>

                                </div>

                            </div>`).join('')}

                    </div>

                </div>

                <div>

                    <h3 class="text-2xl font-bold mb-4">${translations[currentLang].customAssistants}</h3>

                    <div class="space-y-4">

                        ${data.assistants.map(assistant => `<div class="card p-6"><h4 class="font-bold text-[#81B29A]">${assistant.title}</h4><p class="text-gray-600 mt-1">${assistant.description}</p></div>`).join('')}

                    </div>

                </div>

            </div>`;

        departmentContent.innerHTML = contentHtml;

    }

    

    function calculateROI() {

        const h = parseFloat(document.getElementById('heures').value);

        const c = parseFloat(document.getElementById('collaborateurs').value);

        const t = parseFloat(document.getElementById('cout').value);

        

        document.getElementById('heures-val').textContent = h;

        document.getElementById('collaborateurs-val').textContent = c;

        document.getElementById('cout-val').textContent = t;



        const economie = h * c * t * 12;

        document.getElementById('roi-result').textContent = `${economie.toLocaleString(currentLang)} €`;

        updateRoiChart(economie);

    }

    

    function updateRoiChart(economie) {

        const coutAnnuelLicence = 50 * 12 * document.getElementById('collaborateurs').value;

        const ctx = document.getElementById('roiChart').getContext('2d');

        

        if (roiChart) roiChart.destroy();

        

        roiChart = new Chart(ctx, {

            type: 'bar',

            data: {

                labels: [translations[currentLang].roiChartGains, translations[currentLang].roiChartCosts],

                datasets: [{

                    label: translations[currentLang].roiChartLabel,

                    data: [economie, coutAnnuelLicence],

                    backgroundColor: ['#81B29A', '#F2CC8F'],

                    borderColor: ['#6a9c80', '#e6bf7e'],

                    borderWidth: 1

                }]

            },

            options: {

                responsive: true, maintainAspectRatio: false, indexAxis: 'y',

                scales: { x: { beginAtZero: true, ticks: { callback: value => value.toLocaleString(currentLang) + '€' } } },

                plugins: { legend: { display: false }, title: { display: true, text: translations[currentLang].roiChartTitle } }

            }

        });

    }



    // --- EVENT LISTENERS ---

    document.querySelectorAll('.lang-btn').forEach(btn => {

        btn.addEventListener('click', (e) => switchLanguage(e.target.dataset.lang));

    });



    const navLinks = document.querySelectorAll('.nav-link');

    const pageSections = document.querySelectorAll('.page-section');

    function updateActiveLink(targetId) { navLinks.forEach(link => link.classList.toggle('active', link.getAttribute('href') === `#${targetId}`)); }

    function showPage(targetId) { pageSections.forEach(section => section.classList.toggle('hidden', section.id !== targetId)); updateActiveLink(targetId); window.scrollTo(0, 0); }

    function navigateToSection(e) {

        e.preventDefault();

        const targetId = e.currentTarget.getAttribute('href').substring(1);

        history.pushState(null, null, `#${targetId}`);

        showPage(targetId);

        const mobileMenu = document.getElementById('mobile-menu');

        if(!mobileMenu.classList.contains('hidden')) mobileMenu.classList.add('hidden');

    }

    navLinks.forEach(link => link.addEventListener('click', navigateToSection));

    document.getElementById('mobile-menu-button').addEventListener('click', () => document.getElementById('mobile-menu').classList.toggle('hidden'));

    window.addEventListener('popstate', () => showPage(window.location.hash.substring(1) || 'accueil'));



    document.getElementById('department-selector').addEventListener('click', (e) => {

        if (e.target.matches('.department-btn')) {

            const deptKey = e.target.dataset.deptKey;

            renderDepartment(deptKey);

            document.querySelectorAll('.department-btn').forEach(btn => btn.classList.remove('active'));

            e.target.classList.add('active');

        }

    });



    document.getElementById('department-content').addEventListener('click', (e) => {

        const header = e.target.closest('.prompt-card-header');

        if (header) {

            header.nextElementSibling.classList.toggle('open');

            header.querySelector('.icon-arrow').classList.toggle('open');

        }



        const ideasBtn = e.target.closest('.generate-ideas-btn');

        if (ideasBtn) {

            const deptKey = ideasBtn.dataset.deptKey;

            handleGenerateIdeas(deptKey);

        }

    });

    

    async function handleGenerateIdeas(deptKey) {

        const container = document.getElementById('gemini-ideas-container');

        if (!container) return;



        container.innerHTML = `<div class="text-center"><div class="loader mx-auto"></div></div>`;

        const deptName = translations[currentLang].departments[deptKey].displayName;



        const geminiPrompt = `You are an innovation consultant specializing in corporate AI adoption. For the "${deptName}" department, generate 2 new, specific, and actionable use case ideas for generative AI. For each idea, provide a title and a short description. Present the result as a simple JSON array of objects, where each object has "title" and "description" keys. Do not include any other text or markdown formatting. The language for the output must be ${currentLang}.`;



        const result = await callGemini(geminiPrompt);



        if (result) {

            try {

                const ideas = JSON.parse(result);

                let ideasHtml = '<div class="grid md:grid-cols-2 gap-4">';

                ideas.forEach(idea => {

                    ideasHtml += `

                    <div class="card p-6 border-l-4 border-[#F2CC8F]">

                        <h4 class="font-bold text-[#81B29A]">${idea.title}</h4>

                        <p class="text-gray-600 mt-1">${idea.description}</p>

                    </div>`;

                });

                ideasHtml += '</div>';

                container.innerHTML = ideasHtml;

            } catch(e) {

                console.error("Failed to parse Gemini ideas response:", e);

                container.innerHTML = `<div class="text-center text-red-500">${translations[currentLang].ideasError}</div>`;

            }

        } else {

            container.innerHTML = `<div class="text-center text-red-500">${translations[currentLang].ideasError}</div>`;

        }

    }



    async function handleEnhancePrompt() {

        const input = document.getElementById('prompt-input');

        const outputContainer = document.getElementById('prompt-output');

        const loader = document.getElementById('prompt-loader');

        const resultDiv = document.getElementById('prompt-result');

        const errorDiv = document.getElementById('prompt-error');

        

        if (!input.value.trim()) return;



        outputContainer.classList.remove('hidden');

        loader.classList.remove('hidden');

        resultDiv.classList.add('hidden');

        errorDiv.classList.add('hidden');



        const geminiPrompt = `As an expert in prompt engineering, transform the following user's idea into a perfect, structured prompt. The user's idea is: "${input.value}".

        Structure your response into four distinct parts: Rôle (Persona), Contexte, Tâche (Instruction), and Format. For each part, provide a clear and concise suggestion.

        Present the result as a simple JSON object with four keys: "role", "context", "task", and "format". Do not add any extra text or markdown. The language for the output content must be ${currentLang}.`;



        const result = await callGemini(geminiPrompt);

        

        loader.classList.add('hidden');



        if (result) {

            try {

                const enhancedPrompt = JSON.parse(result);

                resultDiv.innerHTML = `

                    <div class="space-y-4">

                        <div class="flex items-start"><span class="font-bold text-[#81B29A] w-24">${translations[currentLang].promptRole}:</span><div class="flex-1">${enhancedPrompt.role}</div></div>

                        <div class="flex items-start"><span class="font-bold text-[#81B29A] w-24">${translations[currentLang].promptContext}:</span><div class="flex-1">${enhancedPrompt.context}</div></div>

                        <div class="flex items-start"><span class="font-bold text-[#81B29A] w-24">${translations[currentLang].promptTask}:</span><div class="flex-1">${enhancedPrompt.task}</div></div>

                        <div class="flex items-start"><span class="font-bold text-[#81B29A] w-24">${translations[currentLang].promptFormat}:</span><div class="flex-1">${enhancedPrompt.format}</div></div>

                    </div>`;

                resultDiv.classList.remove('hidden');

            } catch (e) {

                console.error("Failed to parse enhanced prompt:", e);

                errorDiv.textContent = translations[currentLang].workshopError;

                errorDiv.classList.remove('hidden');

            }

        } else {

            errorDiv.textContent = translations[currentLang].workshopError;

            errorDiv.classList.remove('hidden');

        }

    }

    document.getElementById('enhance-prompt-btn').addEventListener('click', handleEnhancePrompt);



    document.getElementById('accordion-container').addEventListener('click', (e) => {

        const header = e.target.closest('.accordion-header');

        if (header) {

            header.nextElementSibling.classList.toggle('open');

            header.querySelector('.icon-arrow').classList.toggle('open');

        }

    });



    document.getElementById('heures').addEventListener('input', calculateROI);

    document.getElementById('collaborateurs').addEventListener('input', calculateROI);

    document.getElementById('cout').addEventListener('input', calculateROI);

    

    // --- INITIAL LOAD ---

    const initialHash = window.location.hash.substring(1) || 'accueil';

    showPage(initialHash);

    switchLanguage('fr');

});

</script>

</body>

</html>
